<!doctype html>
<html lang="en">
    {% include 'partials/head.twig' %}
    <body >
    {% include 'partials/navigation.twig' %}
        <main class="container-fluid" style="padding-top:30px;">
            {% if result.items | length > 0 %}
              <div class="row">
                <div class="col">
                  <h4>Your search for {{result.query}} returned {{result.items | length}} results</h4>
                </div>
              </div>
              {% for item in result.items %}
                <div class="row my-2">
                  <div class="col-md-3">
                    <img class="img-fluid" src="images/products/{{item.image}}">
                  </div>
                  <div class="col-md-4">
                    <h4>{{item.name}}</h4>
                    <p>{{item.description | slice(0,80) ~ '...' }}</p>
                    <a href="detail.php?product_id={{item.product_id}}">Detail</a>
                  </div>
                </div>
              {% endfor %}
            {% else %}
              <h4>Your search for {{result.query}} returned no result.<?h4>
            {% endif %}
        </main>
    </body>
</html>